extends layout
block variables
    - var title = 'delete page'
block content
    p.aside= page.id
    h1 Confirm page deletion
    p This action cannot be reversed.
    form(action="pages/"+page.id+"/delete/", method="POST")#delpage
        p 
            button(type="button" onclick="window.location.href = 'pages/"+page.id+"'") Cancel
            button(type="submit", id="submit").destroy Delete
